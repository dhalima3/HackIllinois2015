      #myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
        .modal-dialog
          .modal-content
            .modal-header
              button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
              |             
              h3#myModalLabel Add a new Chore!
            |           
            .modal-body
              form.form-horizontal.col-sm-12
                .form-group
                  label Name
                  input.form-control.required(placeholder='Chore name', data-placement='top', data-trigger='manual', data-content='Must be at least 3 characters long, and must only contain letters.', type='text')
                |               
                .form-group
                  label Last Person
                  input.form-control.email(placeholder="The last person that did the chore..they're safe", data-placement='top', data-trigger='manual', data-content='None', type='text')
                |               
                .form-group
                  label Description
                  textarea.form-control(placeholder='Description of the chore here..', data-placement='top', data-trigger='manual')
                |               
                #addChoreButton.form-group
                  button.btn.btn-success.pull-right(type='submit') Add It!
                  |  
                  p#form-error.help-block.pull-left.text-danger.hide &nbsp; The form is not valid. 
            |           
            .modal-footer
              button.btn(data-dismiss='modal', aria-hidden='true') Cancel
